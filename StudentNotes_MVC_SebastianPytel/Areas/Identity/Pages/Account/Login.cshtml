@page
@model LoginModel

@{
    ViewData["Title"] = "Sign in";
}
<div class="d-flex flex-column min-vh-100 ">
    <partial name="_Navbar" />

    <div class="d-flex flex-grow-1 flex-column align-items-center justify-content-center text-center p-3">
        <div class="text-center">
            <div class="py-4">
                <i class="fas fa-user fa-4x"></i>
            </div>
            <h2><span class="font-weight-bold">@ViewData["Title"]</span></h2>
            <hr />
            <section>
                <p class="text-danger">
                    @{
                        @Html.ValidationMessage("LoginError")
                    }
                </p>
                <form method="post">
                    <div class="form-group">
                        <input asp-for="Input.Email" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Input.Email)" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.Password" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Input.Password)" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <p>
                            <a asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Sign in</button>
                    </div>
                    <br />
                </form>
                <div class="form-group">
                    <p>
                        Doesn't have an account? <a asp-page="./Register" class=""><span class="font-weight-bold">Sign up</span></a>
                    </p>
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
