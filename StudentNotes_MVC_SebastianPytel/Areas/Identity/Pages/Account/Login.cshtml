@page
@model LoginModel

@{
    ViewData["Title"] = "Sign in";
}
<div class="d-flex flex-column min-vh-100 ">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="fas fa-book-reader"></i>
                <span class="navbar-brand mb-0 px-1 h1">StudentNotes 1.0</span>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <div class="d-flex flex-grow-1 flex-column align-items-center justify-content-center text-center p-3">
        <div class="text-center">
            <div class="py-4">
                <i class="fas fa-user fa-4x"></i>
            </div>
            <h2><span class="font-weight-bold">@ViewData["Title"]</span></h2>
            <hr />
            <section>
                <form method="post">
                    <div class="form-group">
                        <input asp-for="Input.Email" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Input.Email)" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.Password" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Input.Password)" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <p>
                            <a asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Sign in</button>
                    </div>
                    <br />
                </form>
                <div class="form-group">
                    <p>
                        Doesn't have an account? <a asp-page="./Register" class=""><span class="font-weight-bold">Sign up</span></a>
                    </p>
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
