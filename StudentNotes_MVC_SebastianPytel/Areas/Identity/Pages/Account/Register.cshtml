@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign up";
}

<div class="d-flex flex-column min-vh-100 ">
    <partial name="_Navbar" />

    <div class="d-flex flex-grow-1 flex-column align-items-center justify-content-center text-center p-3">
        <div class="text-center">
            <div class="py-4">
                <i class="fas fa-user fa-4x"></i>
            </div>
            <h2><span class="font-weight-bold">@ViewData["Title"]</span></h2>
            <hr />
            <section>
                <p class="text-danger">
                    @{
                        @Html.ValidationMessage("RegisterError")
                    }
                </p>
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="form-group">
                        <input asp-for="Input.Email" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Input.Email)" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.Password" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Input.Password)" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Input.ConfirmPassword)" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="form-group">
                        <input asp-for="Input.Name" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Input.Name)" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.Surname" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Input.Surname)" />
                        <span asp-validation-for="Input.Surname" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-success">Sign up</button>
                </form>
                <br />
                <div class="form-group">
                    <p>
                        Already have an account? <a asp-page="./Login" class=""><span class="font-weight-bold">Sign in</span></a>
                    </p>
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
