@page
@model LockoutModel
@{
    ViewData["Title"] = "Locked out";
}
<div class="d-flex flex-column min-vh-100 ">
    <partial name="_Navbar" />

    <div class="d-flex flex-grow-1 flex-column align-items-center justify-content-center text-center p-3">
        <div class="text-center">
            <div class="py-4">
                <i class="fas fa-user fa-4x"></i>
            </div>
            <h2><span class="font-weight-bold">@ViewData["Title"]</span></h2>
            <hr />
            <section>
                <h1 class="text-danger">@ViewData["Title"]</h1>
                <p class="text-danger">This account has been locked out, please try again later.</p>

                <div class="form-group">
                    <p>
                        Doesn't have an account? <a asp-page="./Register" class=""><span class="font-weight-bold">Sign up</span></a>
                    </p>
                </div>
            </section>
        </div>
    </div>
</div>
