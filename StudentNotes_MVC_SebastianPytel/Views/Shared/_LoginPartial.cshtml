@using Microsoft.AspNetCore.Identity
@using StudentNotes_MVC_SebastianPytel.Areas.Identity.Data

@inject SignInManager<StudentNotesUser> SignInManager
@inject UserManager<StudentNotesUser> UserManager


@if (SignInManager.IsSignedIn(User)) {
    var user = await UserManager.GetUserAsync(User);
    string name = "";
    name = user.Name;

    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">
            <a class="nav-link" asp-controller="StudentNotes" asp-action="Index" title="Manage">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @name aka @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "StudentNotes", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
                <button type="submit" class="btn btn-link navbar-btn nav-link">Logout</button>
            </form>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav navbar-right">
        <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}