@model IEnumerable<StudentNotes_MVC_SebastianPytel.Models.StudentNote>

<div class="row text-center">
    @foreach (var item in Model)
    {
        <div class="col-6 col-md-4 col-lg-3 py-3">
            <a data-toggle="modal" data-target="#studentNotesModal" data-modal-title="@Html.Raw(item.NoteLabel)" data-modal-url="/StudentNotes/DetailsAjax/@item.Id" href="#">
                <i class="fas fa-sticky-note fa-5x text-warning"></i>
                <p class="note-title text-info font-weight-bold">
                    @Html.Raw(item.NoteLabel)
                </p>
            </a>
        </div>
    }
</div>
